{
  "expo": {
    "name": "OtoFlix",
    "slug": "OtoFlix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/OtoFlix.png",
    "scheme": "otoflix",
    "platforms": [
      "ios",
      "android"
    ],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.otoflix.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1D1D1D",
        "foregroundImage": "./src/assets/images/OtoFlix.png",
        "backgroundImage": "./src/assets/images/OtoFlix.png",
        "monochromeImage": "./src/assets/images/OtoFlix.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.otoflix.app"
    },
    "web": {
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
